<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5">

    <!-- Cover Photo -->
    <ImageView
        android:id="@+id/cover_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/post1"
        android:background="#D3D3D3" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/sample_profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_bg"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:elevation="4dp" />

    <!-- User Name -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noel Raterta"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noel@gmail.com"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:paddingTop="4dp" />

    <!-- Bio Section -->
    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio: Tech Enthusiast | Coder | Explorer of Ideas"
        android:textSize="14sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:layout_below="@id/tv_email"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_card_bg"
        android:paddingHorizontal="16dp" />

    <!-- Edit Profile Button (First) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_edit"
        android:drawablePadding="8dp"
        android:layout_below="@id/tv_bio"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Back to Menu Button (Second) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Menu"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_back"
        android:drawablePadding="8dp"
        android:layout_below="@id/btn_edit_profile"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"/>



</RelativeLayout>
